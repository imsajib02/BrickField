            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/expense_source"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/sp_expense_way"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/sp_sub_expense"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mati_mixing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/sp_mati_mixing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mati"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/sp_mati"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_koyla"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/sp_koyla"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_oil"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/sp_oil"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/amount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_unit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="@string/amount"
                    android:imeOptions="actionNext"
                    android:inputType="number|numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/price"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="@string/price"
                    android:imeOptions="actionNext"
                    android:inputType="number|numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/total"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_total"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="@string/total"
                    android:imeOptions="actionDone"
                    android:inputType="number|numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/joma"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_paid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="@string/joma"
                    android:imeOptions="actionDone"
                    android:inputType="number|numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/due"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_due"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dim10"
                android:background="@drawable/border_btn"
                android:gravity="center"
                android:text="@string/update"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>