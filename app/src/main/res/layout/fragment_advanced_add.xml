<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dim10"
    android:layout_marginRight="@dimen/dim10"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/sp_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:popupBackground="@drawable/border_edt"
                    android:textColor="@color/black"
                    android:background="@drawable/border_edt"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <AutoCompleteTextView
                    android:id="@+id/ac_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:popupBackground="@drawable/border_edt"
                    android:textColor="@color/black"
                    android:background="@drawable/border_edt"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:src="@drawable/ic_add_black_24dp"
                    android:id="@+id/iv_add"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/class_no"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/sp_class"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.7"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/border_edt"
                    android:src="@drawable/ic_add_black_24dp"
                    android:id="@+id/iv_add_class"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/amount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_unit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="@string/amount"
                    android:imeOptions="actionNext"
                    android:inputType="number|numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/price"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="@string/price"
                    android:imeOptions="actionNext"
                    android:inputType="number|numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/total"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_total"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="@string/total"
                    android:imeOptions="actionNext"
                    android:inputType="number|numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/remarks"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_remarks"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="@string/remarks"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="4"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/porisod"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/et_paid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="@string/porisod"
                    android:imeOptions="actionDone"
                    android:inputType="number|numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/dim5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/dim3"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/border_edt"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/yellow_dark"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:text="@string/obosisto"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_due"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/dim5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_save"
                android:layout_marginTop="@dimen/dim10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:background="@drawable/border_btn"
                android:text="@string/save"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
