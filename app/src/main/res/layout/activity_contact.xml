<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dim8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/border_edt"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:padding="@dimen/dim5"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:background="@drawable/border_edt"
            android:padding="@dimen/dim5"
            android:maxLength="250"
            android:inputType="text"
            android:maxLines="3"
            android:hint="Shafiul Islam"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:background="@drawable/border_edt"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:padding="@dimen/dim5"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:text="@string/phone"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:background="@drawable/border_edt"
            android:padding="@dimen/dim5"
            android:maxLength="250"
            android:maxLines="3"
            android:inputType="phone"
            android:hint="01721492408"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dim15"
        android:layout_marginBottom="@dimen/dim20"
        android:background="@drawable/border_btn"
        android:gravity="center"
        android:text="@string/save"
        android:textStyle="bold"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:orientation="horizontal"
        android:weightSum="3">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/dim3"
            android:text="@string/name"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.3"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/dim3"
            android:text="@string/phone"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight=".7"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/dim3"
            android:textSize="@dimen/_12sdp"
            android:text="@string/call"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_contract"
        android:dividerHeight="@dimen/dim2">
    </ListView>

</LinearLayout>